## Data Classes and Manager

### FoodItem.kt
```kotlin
package com.example.foodorderingapp

import java.io.Serializable

data class FoodItem(
    val id: Int,
    val name: String,
    val description: String,
    val basePrice: Double,
    val category: String,
    val imageResourceId: Int = android.R.drawable.ic_menu_gallery
) : Serializable
```

### CartItem.kt
```kotlin
package com.example.foodorderingapp

import java.io.Serializable

data class CartItem(
    val foodItem: FoodItem,
    val size: String,
    val sizePrice: Double,
    val quantity: Int,
    val extras: List<String>,
    val extrasPrice: Double
) : Serializable {
    fun getTotalPrice(): Double {
        return (sizePrice + extrasPrice) * quantity
    }
}
```

### CartManager.kt
```kotlin
package com.example.foodorderingapp

object CartManager {
    private val cartItems = mutableListOf<CartItem>()
    
    fun addItem(item: CartItem) {
        cartItems.add(item)
    }
    
    fun removeItem(position: Int) {
        if (position < cartItems.size) {
            cartItems.removeAt(position)
        }
    }
    
    fun getItems(): List<CartItem> {
        return cartItems.toList()
    }
    
    fun clearCart() {
        cartItems.clear()
    }
    
    fun getItemCount(): Int {
        return cartItems.sumOf { it.quantity }
    }
    
    fun getSubtotal(): Double {
        return cartItems.sumOf { it.getTotalPrice() }
    }
    
    fun getTax(): Double {
        return getSubtotal() * 0.10 // 10% tax
    }
    
    fun getTotal(): Double {
        return getSubtotal() + getTax()
    }
}
```

---

## Activity Files

### MenuActivity.kt
```kotlin
package com.example.foodorderingapp

import android.content.Intent
import androidx.appcompat.app.AppCompatActivity
import android.os.Bundle
import android.widget.Button
import android.widget.ImageView
import android.widget.LinearLayout
import android.widget.TextView

class MenuActivity : AppCompatActivity() {
    
    // Declare UI components
    private lateinit var menuTitleTextView: TextView
    private lateinit var menuItemsContainer: LinearLayout
    private lateinit var viewCartButton: Button
    
    // Pizza item views
    private lateinit var pizzaItemLayout: LinearLayout
    private lateinit var pizzaImageView: ImageView
    private lateinit var pizzaNameTextView: TextView
    private lateinit var pizzaDescriptionTextView: TextView
    private lateinit var pizzaPriceTextView: TextView
    
    // Burger item views
    private lateinit var burgerItemLayout: LinearLayout
    private lateinit var burgerImageView: ImageView
    private lateinit var burgerNameTextView: TextView
    private lateinit var burgerDescriptionTextView: TextView
    private lateinit var burgerPriceTextView: TextView
    
    // Salad item views
    private lateinit var saladItemLayout: LinearLayout
    private lateinit var saladImageView: ImageView
    private lateinit var saladNameTextView: TextView
    private lateinit var saladDescriptionTextView: TextView
    private lateinit var saladPriceTextView: TextView
    
    // Food items data
    private lateinit var pizzaItem: FoodItem
    private lateinit var burgerItem: FoodItem
    private lateinit var saladItem: FoodItem
    
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_menu)
        
        // Initialize food items
        initializeFoodItems()
        
        // Initialize views using findViewById
        initializeViews()
        
        // Set up click listeners
        setupClickListeners()
    }
    
    override fun onResume() {
        super.onResume()
        // Update cart button with item count
        updateCartButton()
    }
    
    private fun initializeFoodItems() {
        // Create food item objects with data
        pizzaItem = FoodItem(
            id = 1,
            name = "Deluxe Pizza",
            description = "Cheese, pepperoni, mushrooms, peppers",
            basePrice = 12.99,
            category = "Pizza"
        )
        
        burgerItem = FoodItem(
            id = 2,
            name = "Classic Burger",
            description = "Beef patty, lettuce, tomato, cheese",
            basePrice = 8.99,
            category = "Burger"
        )
        
        saladItem = FoodItem(
            id = 3,
            name = "Caesar Salad",
            description = "Romaine, croutons, parmesan, dressing",
            basePrice = 6.99,
            category = "Salad"
        )
    }
    
    private fun initializeViews() {
        // Find main views
        menuTitleTextView = findViewById(R.id.menuTitleTextView)
        menuItemsContainer = findViewById(R.id.menuItemsContainer)
        viewCartButton = findViewById(R.id.viewCartButton)
        
        // Find pizza item views
        pizzaItemLayout = findViewById(R.id.pizzaItemLayout)
        pizzaImageView = findViewById(R.id.pizzaImageView)
        pizzaNameTextView = findViewById(R.id.pizzaNameTextView)
        pizzaDescriptionTextView = findViewById(R.id.pizzaDescriptionTextView)
        pizzaPriceTextView = findViewById(R.id.pizzaPriceTextView)
        
        // Find burger item views
        burgerItemLayout = findViewById(R.id.burgerItemLayout)
        burgerImageView = findViewById(R.id.burgerImageView)
        burgerNameTextView = findViewById(R.id.burgerNameTextView)
        burgerDescriptionTextView = findViewById(R.id.burgerDescriptionTextView)
        burgerPriceTextView = findViewById(R.id.burgerPriceTextView)
        
        // Find salad item views
        saladItemLayout = findViewById(R.id.saladItemLayout)
        saladImageView = findViewById(R.id.saladImageView)
        saladNameTextView = findViewById(R.id.saladNameTextView)
        saladDescriptionTextView = findViewById(R.id.saladDescriptionTextView)
        saladPriceTextView = findViewById(R.id.saladPriceTextView)
        
        // Set data to views
        updateFoodItemViews()
    }
    
    private fun updateFoodItemViews() {
        // Update pizza views
        pizzaNameTextView.text = pizzaItem.name
        pizzaDescriptionTextView.text = pizzaItem.description
        pizzaPriceTextView.text = String.format("$%.2f", pizzaItem.basePrice)
        
        // Update burger views
        burgerNameTextView.text = burgerItem.name
        burgerDescriptionTextView.text = burgerItem.description
        burgerPriceTextView.text = String.format("$%.2f", burgerItem.basePrice)
        
        // Update salad views
        saladNameTextView.text = saladItem.name
        saladDescriptionTextView.text = saladItem.description
        saladPriceTextView.text = String.format("$%.2f", saladItem.basePrice)
    }
    
    private fun setupClickListeners() {
        // Pizza item click
        pizzaItemLayout.setOnClickListener {
            navigateToItemDetail(pizzaItem)
        }
        
        // Burger item click
        burgerItemLayout.setOnClickListener {
            navigateToItemDetail(burgerItem)
        }
        
        // Salad item click
        saladItemLayout.setOnClickListener {
            navigateToItemDetail(saladItem)
        }
        
        // Navigate to Cart
        viewCartButton.setOnClickListener {
            val intent = Intent(this, CartActivity::class.java)
            startActivity(intent)
        }
    }
    
    private fun navigateToItemDetail(foodItem: FoodItem) {
        val intent = Intent(this, ItemDetailActivity::class.java)
        intent.putExtra("FOOD_ITEM", foodItem)
        startActivity(intent)
    }
    
    private fun updateCartButton() {
        val itemCount = CartManager.getItemCount()
        viewCartButton.text = "View Cart ($itemCount items)"
    }
}
```

### ItemDetailActivity.kt
```kotlin
package com.example.foodorderingapp

import android.content.Intent
import androidx.appcompat.app.AppCompatActivity
import android.os.Bundle
import android.widget.*

class ItemDetailActivity : AppCompatActivity() {
    
    // Declare UI components
    private lateinit var itemImageView: ImageView
    private lateinit var itemNameTextView: TextView
    private lateinit var itemPriceTextView: TextView
    private lateinit var itemDescriptionTextView: TextView
    
    // Size selection
    private lateinit var sizeRadioGroup: RadioGroup
    private lateinit var smallRadioButton: RadioButton
    private lateinit var mediumRadioButton: RadioButton
    private lateinit var largeRadioButton: RadioButton
    
    // Toppings
    private lateinit var extraCheeseCheckBox: CheckBox
    private lateinit var mushroomsCheckBox: CheckBox
    private lateinit var olivesCheckBox: CheckBox
    
    // Quantity
    private lateinit var decreaseQuantityButton: Button
    private lateinit var quantityTextView: TextView
    private lateinit var increaseQuantityButton: Button
    
    // Total and actions
    private lateinit var totalPriceTextView: TextView
    private lateinit var backToMenuButton: Button
    private lateinit var addToCartButton: Button
    
    // Data
    private lateinit var foodItem: FoodItem
    private var quantity = 1
    private var selectedSize = "Medium"
    private var sizePrice = 0.0
    private val EXTRA_TOPPING_PRICE = 1.50
    
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_item_detail)
        
        // Get food item from intent
        foodItem = intent.getSerializableExtra("FOOD_ITEM") as? FoodItem
            ?: throw IllegalArgumentException("Food item not found")
        
        // Initialize views
        initializeViews()
        
        // Set up click listeners
        setupClickListeners()
        
        // Display food item data
        displayFoodItem()
        
        // Calculate initial price
        updateTotalPrice()
    }
    
    private fun initializeViews() {
        // Find all views
        itemImageView = findViewById(R.id.itemImageView)
        itemNameTextView = findViewById(R.id.itemNameTextView)
        itemPriceTextView = findViewById(R.id.itemPriceTextView)
        itemDescriptionTextView = findViewById(R.id.itemDescriptionTextView)
        
        // Size selection
        sizeRadioGroup = findViewById(R.id.sizeRadioGroup)
        smallRadioButton = findViewById(R.id.smallRadioButton)
        mediumRadioButton = findViewById(R.id.mediumRadioButton)
        largeRadioButton = findViewById(R.id.largeRadioButton)
        
        // Toppings
        extraCheeseCheckBox = findViewById(R.id.extraCheeseCheckBox)
        mushroomsCheckBox = findViewById(R.id.mushroomsCheckBox)
        olivesCheckBox = findViewById(R.id.olivesCheckBox)
        
        // Quantity
        decreaseQuantityButton = findViewById(R.id.decreaseQuantityButton)
        quantityTextView = findViewById(R.id.quantityTextView)
        increaseQuantityButton = findViewById(R.id.increaseQuantityButton)
        
        // Total and actions
        totalPriceTextView = findViewById(R.id.totalPriceTextView)
        backToMenuButton = findViewById(R.id.backToMenuButton)
        addToCartButton = findViewById(R.id.addToCartButton)
    }
    
    private fun displayFoodItem() {
        // Set food item data to views
        itemNameTextView.text = foodItem.name
        itemPriceTextView.text = String.format("$%.2f", foodItem.basePrice)
        itemDescriptionTextView.text = "Our signature ${foodItem.name.lowercase()} with premium ingredients on our hand-made base."
        
        // Update radio button text with prices
        val smallPrice = foodItem.basePrice - 2.0
        val mediumPrice = foodItem.basePrice
        val largePrice = foodItem.basePrice + 2.0
        
        smallRadioButton.text = String.format("Small - $%.2f", smallPrice)
        mediumRadioButton.text = String.format("Medium - $%.2f", mediumPrice)
        largeRadioButton.text = String.format("Large - $%.2f", largePrice)
        
        // Set initial size price
        sizePrice = mediumPrice
    }
    
    private fun setupClickListeners() {
        // Quantity buttons
        decreaseQuantityButton.setOnClickListener {
            if (quantity > 1) {
                quantity--
                quantityTextView.text = quantity.toString()
                updateTotalPrice()
            }
        }
        
        increaseQuantityButton.setOnClickListener {
            if (quantity < 10) {
                quantity++
                quantityTextView.text = quantity.toString()
                updateTotalPrice()
            }
        }
        
        // Size selection listener
        sizeRadioGroup.setOnCheckedChangeListener { _, checkedId ->
            when (checkedId) {
                R.id.smallRadioButton -> {
                    selectedSize = "Small"
                    sizePrice = foodItem.basePrice - 2.0
                }
                R.id.mediumRadioButton -> {
                    selectedSize = "Medium"
                    sizePrice = foodItem.basePrice
                }
                R.id.largeRadioButton -> {
                    selectedSize = "Large"
                    sizePrice = foodItem.basePrice + 2.0
                }
            }
            updateTotalPrice()
        }
        
        // Checkbox listeners
        extraCheeseCheckBox.setOnCheckedChangeListener { _, _ ->
            updateTotalPrice()
        }
        
        mushroomsCheckBox.setOnCheckedChangeListener { _, _ ->
            updateTotalPrice()
        }
        
        olivesCheckBox.setOnCheckedChangeListener { _, _ ->
            updateTotalPrice()
        }
        
        // SIMPLE BACK TO MENU - GUARANTEED TO WORK
        backToMenuButton.setOnClickListener {
            finish() // Just close this activity and go back
        }
        
        // Add to cart
        addToCartButton.setOnClickListener {
            addItemToCart()
        }
    }
    
    private fun updateTotalPrice() {
        // Calculate extras price
        var extrasPrice = 0.0
        
        if (extraCheeseCheckBox.isChecked) {
            extrasPrice += EXTRA_TOPPING_PRICE
        }
        if (mushroomsCheckBox.isChecked) {
            extrasPrice += EXTRA_TOPPING_PRICE
        }
        if (olivesCheckBox.isChecked) {
            extrasPrice += EXTRA_TOPPING_PRICE
        }
        
        // Calculate total
        val total = (sizePrice + extrasPrice) * quantity
        totalPriceTextView.text = String.format("$%.2f", total)
    }
    
    private fun addItemToCart() {
        // Collect selected extras
        val extras = mutableListOf<String>()
        var extrasPrice = 0.0
        
        if (extraCheeseCheckBox.isChecked) {
            extras.add("Extra Cheese")
            extrasPrice += EXTRA_TOPPING_PRICE
        }
        if (mushroomsCheckBox.isChecked) {
            extras.add("Extra Mushrooms")
            extrasPrice += EXTRA_TOPPING_PRICE
        }
        if (olivesCheckBox.isChecked) {
            extras.add("Olives")
            extrasPrice += EXTRA_TOPPING_PRICE
        }
        
        // Create cart item
        val cartItem = CartItem(
            foodItem = foodItem,
            size = selectedSize,
            sizePrice = sizePrice,
            quantity = quantity,
            extras = extras,
            extrasPrice = extrasPrice
        )
        
        // Add to cart
        CartManager.addItem(cartItem)
        
        // Show confirmation
        Toast.makeText(this, "Added to cart!", Toast.LENGTH_SHORT).show()
        
        // Navigate to cart
        val intent = Intent(this, CartActivity::class.java)
        startActivity(intent)
    }
    
    // OVERRIDE BACK BUTTON TO MAKE SURE IT WORKS
    override fun onBackPressed() {
        super.onBackPressed()
        finish()
    }
}
```

### CartActivity.kt
```kotlin
package com.example.foodorderingapp

import android.content.Intent
import androidx.appcompat.app.AppCompatActivity
import android.os.Bundle
import android.view.Gravity
import android.widget.Button
import android.widget.LinearLayout
import android.widget.TextView
import android.widget.Toast
import androidx.core.content.ContextCompat

class CartActivity : AppCompatActivity() {
    
    // Declare UI components
    private lateinit var backToMenuFromCartButton: Button
    private lateinit var cartTitleTextView: TextView
    private lateinit var cartItemsContainer: LinearLayout
    private lateinit var subtotalTextView: TextView
    private lateinit var taxTextView: TextView
    private lateinit var cartTotalTextView: TextView
    private lateinit var continueShopping: Button
    private lateinit var checkoutButton: Button
    
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_cart)
        
        // Initialize views using findViewById
        initializeViews()
        
        // Set up click listeners
        setupClickListeners()
        
        // Display cart items
        displayCartItems()
        
        // Update totals
        updateTotals()
    }
    
    private fun initializeViews() {
        // Find all views by their IDs
        backToMenuFromCartButton = findViewById(R.id.backToMenuFromCartButton)
        cartTitleTextView = findViewById(R.id.cartTitleTextView)
        cartItemsContainer = findViewById(R.id.cartItemsContainer)
        subtotalTextView = findViewById(R.id.subtotalTextView)
        taxTextView = findViewById(R.id.taxTextView)
        cartTotalTextView = findViewById(R.id.cartTotalTextView)
        continueShopping = findViewById(R.id.continueShopping)
        checkoutButton = findViewById(R.id.checkoutButton)
    }
    
    private fun setupClickListeners() {
        // Header back button - go back to menu
        backToMenuFromCartButton.setOnClickListener {
            navigateBackToMenu()
        }
        
        // Continue shopping - go back to menu
        continueShopping.setOnClickListener {
            navigateBackToMenu()
        }
        
        // Proceed to checkout
        checkoutButton.setOnClickListener {
            if (CartManager.getItems().isEmpty()) {
                Toast.makeText(this, "Cart is empty!", Toast.LENGTH_SHORT).show()
            } else {
                val intent = Intent(this, CheckoutActivity::class.java)
                startActivity(intent)
            }
        }
    }
    
    private fun navigateBackToMenu() {
        val intent = Intent(this, MenuActivity::class.java)
        intent.flags = Intent.FLAG_ACTIVITY_CLEAR_TOP
        startActivity(intent)
        finish()
    }
    
    private fun displayCartItems() {
        // Clear existing views
        cartItemsContainer.removeAllViews()
        
        val cartItems = CartManager.getItems()
        
        if (cartItems.isEmpty()) {
            // Show empty cart message
            val emptyTextView = TextView(this).apply {
                text = "Your cart is empty"
                textSize = 18f
                gravity = Gravity.CENTER
                setPadding(0, 100, 0, 100)
                setTextColor(ContextCompat.getColor(context, android.R.color.darker_gray))
            }
            cartItemsContainer.addView(emptyTextView)
        } else {
            // Display each cart item
            cartItems.forEachIndexed { index, cartItem ->
                val itemLayout = createCartItemView(cartItem, index)
                cartItemsContainer.addView(itemLayout)
            }
        }
    }
    
    private fun createCartItemView(cartItem: CartItem, position: Int): LinearLayout {
        // Create main container
        val itemContainer = LinearLayout(this).apply {
            orientation = LinearLayout.VERTICAL
            setBackgroundColor(ContextCompat.getColor(context, android.R.color.white))
            setPadding(32, 32, 32, 32)
            elevation = 4f
            
            val params = LinearLayout.LayoutParams(
                LinearLayout.LayoutParams.MATCH_PARENT,
                LinearLayout.LayoutParams.WRAP_CONTENT
            ).apply {
                setMargins(0, 0, 0, 16)
            }
            layoutParams = params
        }
        
        // Create header with name and price
        val headerLayout = LinearLayout(this).apply {
            orientation = LinearLayout.HORIZONTAL
        }
        
        val nameTextView = TextView(this).apply {
            text = "${cartItem.foodItem.name} (${cartItem.size})"
            textSize = 16f
            setTextColor(ContextCompat.getColor(context, android.R.color.black))
            layoutParams = LinearLayout.LayoutParams(0, LinearLayout.LayoutParams.WRAP_CONTENT, 1f)
        }
        
        val priceTextView = TextView(this).apply {
            text = String.format("$%.2f", cartItem.getTotalPrice())
            textSize = 16f
            setTextColor(ContextCompat.getColor(context, android.R.color.holo_orange_dark))
        }
        
        headerLayout.addView(nameTextView)
        headerLayout.addView(priceTextView)
        
        // Create quantity text
        val quantityTextView = TextView(this).apply {
            text = "Quantity: ${cartItem.quantity}"
            textSize = 14f
            setTextColor(ContextCompat.getColor(context, android.R.color.darker_gray))
            setPadding(0, 8, 0, 0)
        }
        
        // Create remove button
        val removeButton = Button(this).apply {
            text = "Remove"
            textSize = 12f
            setBackgroundColor(ContextCompat.getColor(context, android.R.color.darker_gray))
            setTextColor(ContextCompat.getColor(context, android.R.color.holo_red_dark))
            setPadding(32, 0, 32, 0)
            
            val buttonParams = LinearLayout.LayoutParams(
                LinearLayout.LayoutParams.WRAP_CONTENT,
                100
            ).apply {
                setMargins(0, 16, 0, 0)
            }
            layoutParams = buttonParams
            
            setOnClickListener {
                CartManager.removeItem(position)
                displayCartItems()
                updateTotals()
                Toast.makeText(context, "Item removed", Toast.LENGTH_SHORT).show()
            }
        }
        
        // Add all views to container
        itemContainer.addView(headerLayout)
        itemContainer.addView(quantityTextView)
        
        // Add extras if any
        if (cartItem.extras.isNotEmpty()) {
            val extrasTextView = TextView(this).apply {
                text = "Extras: ${cartItem.extras.joinToString(", ")}"
                textSize = 14f
                setTextColor(ContextCompat.getColor(context, android.R.color.darker_gray))
                setPadding(0, 4, 0, 0)
            }
            itemContainer.addView(extrasTextView)
        }
        
        itemContainer.addView(removeButton)
        
        return itemContainer
    }
    
    private fun updateTotals() {
        val subtotal = CartManager.getSubtotal()
        val tax = CartManager.getTax()
        val total = CartManager.getTotal()
        
        subtotalTextView.text = String.format("$%.2f", subtotal)
        taxTextView.text = String.format("$%.2f", tax)
        cartTotalTextView.text = String.format("$%.2f", total)
        
        // Update checkout button state
        checkoutButton.isEnabled = CartManager.getItems().isNotEmpty()
    }
    
    // Override back button
    override fun onBackPressed() {
        super.onBackPressed()
        navigateBackToMenu()
    }
}
```

### CheckoutActivity.kt
```kotlin
package com.example.foodorderingapp

import android.content.Intent
import androidx.appcompat.app.AppCompatActivity
import android.os.Bundle
import android.widget.*

class CheckoutActivity : AppCompatActivity() {
    
    // Declare UI components
    private lateinit var backToCartFromCheckoutButton: Button
    private lateinit var checkoutTitleTextView: TextView
    private lateinit var checkoutFormContainer: LinearLayout
    private lateinit var orderTotalTextView: TextView
    
    // Form fields
    private lateinit var nameEditText: EditText
    private lateinit var phoneEditText: EditText
    private lateinit var addressEditText: EditText
    private lateinit var notesEditText: EditText
    
    // Payment method
    private lateinit var paymentRadioGroup: RadioGroup
    private lateinit var cashRadioButton: RadioButton
    private lateinit var cardRadioButton: RadioButton
    
    // Action buttons
    private lateinit var backToCartButton: Button
    private lateinit var placeOrderButton: Button
    
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_checkout)
        
        // Initialize views using findViewById
        initializeViews()
        
        // Set up click listeners
        setupClickListeners()
        
        // Display order total
        displayOrderTotal()
    }
    
    private fun initializeViews() {
        // Find all views by their IDs
        backToCartFromCheckoutButton = findViewById(R.id.backToCartFromCheckoutButton)
        checkoutTitleTextView = findViewById(R.id.checkoutTitleTextView)
        checkoutFormContainer = findViewById(R.id.checkoutFormContainer)
        orderTotalTextView = findViewById(R.id.orderTotalTextView)
        
        // Form fields
        nameEditText = findViewById(R.id.nameEditText)
        phoneEditText = findViewById(R.id.phoneEditText)
        addressEditText = findViewById(R.id.addressEditText)
        notesEditText = findViewById(R.id.notesEditText)
        
        // Payment method
        paymentRadioGroup = findViewById(R.id.paymentRadioGroup)
        cashRadioButton = findViewById(R.id.cashRadioButton)
        cardRadioButton = findViewById(R.id.cardRadioButton)
        
        // Action buttons
        backToCartButton = findViewById(R.id.backToCartButton)
        placeOrderButton = findViewById(R.id.placeOrderButton)
    }
    
    private fun setupClickListeners() {
        // Header back button - go back to cart
        backToCartFromCheckoutButton.setOnClickListener {
            navigateBackToCart()
        }
        
        // Go back to cart
        backToCartButton.setOnClickListener {
            navigateBackToCart()
        }
        
        // Place order
        placeOrderButton.setOnClickListener {
            if (validateForm()) {
                processOrder()
            }
        }
    }
    
    private fun navigateBackToCart() {
        val intent = Intent(this, CartActivity::class.java)
        startActivity(intent)
        finish()
    }
    
    private fun displayOrderTotal() {
        val total = CartManager.getTotal()
        orderTotalTextView.text = String.format("$%.2f", total)
    }
    
    private fun validateForm(): Boolean {
        // Validate name
        if (nameEditText.text.toString().trim().isEmpty()) {
            nameEditText.error = "Name is required"
            nameEditText.requestFocus()
            return false
        }
        
        // Validate phone
        val phone = phoneEditText.text.toString().trim()
        if (phone.isEmpty()) {
            phoneEditText.error = "Phone number is required"
            phoneEditText.requestFocus()
            return false
        }
        if (phone.length < 10) {
            phoneEditText.error = "Please enter a valid phone number"
            phoneEditText.requestFocus()
            return false
        }
        
        // Validate address
        if (addressEditText.text.toString().trim().isEmpty()) {
            addressEditText.error = "Delivery address is required"
            addressEditText.requestFocus()
            return false
        }
        
        return true
    }
    
    private fun processOrder() {
        // Get form data
        val name = nameEditText.text.toString().trim()
        val phone = phoneEditText.text.toString().trim()
        val address = addressEditText.text.toString().trim()
        val notes = notesEditText.text.toString().trim()
        
        val paymentMethod = when (paymentRadioGroup.checkedRadioButtonId) {
            R.id.cashRadioButton -> "Cash on Delivery"
            R.id.cardRadioButton -> "Credit/Debit Card"
            else -> "Cash on Delivery"
        }
        
        // Create order summary
        val orderSummary = buildOrderSummary(name, phone, address, notes, paymentMethod)
        
        // Show success message with order details
        val message = "Order placed successfully!\n\n" +
                "Delivery to: $name\n" +
                "Address: $address\n" +
                "Total: ${String.format("$%.2f", CartManager.getTotal())}\n\n" +
                "Estimated delivery: 30-45 minutes"
        
        Toast.makeText(this, message, Toast.LENGTH_LONG).show()
        
        // Clear the cart
        CartManager.clearCart()
        
        // Return to menu and clear all activities
        val intent = Intent(this, MenuActivity::class.java)
        intent.flags = Intent.FLAG_ACTIVITY_NEW_TASK or Intent.FLAG_ACTIVITY_CLEAR_TASK
        startActivity(intent)
    }
    
    private fun buildOrderSummary(
        name: String,
        phone: String,
        address: String,
        notes: String,
        paymentMethod: String
    ): String {
        val summary = StringBuilder()
        summary.append("ORDER DETAILS\n")
        summary.append("=============\n\n")
        
        // Customer info
        summary.append("Customer: $name\n")
        summary.append("Phone: $phone\n")
        summary.append("Address: $address\n")
        if (notes.isNotEmpty()) {
            summary.append("Notes: $notes\n")
        }
        summary.append("Payment: $paymentMethod\n\n")
        
        // Order items
        summary.append("ITEMS:\n")
        CartManager.getItems().forEach { item ->
            summary.append("- ${item.quantity}x ${item.foodItem.name} (${item.size})")
            if (item.extras.isNotEmpty()) {
                summary.append(" + ${item.extras.joinToString(", ")}")
            }
            summary.append(" - ${String.format("$%.2f", item.getTotalPrice())}\n")
        }
        
        // Totals
        summary.append("\nSubtotal: ${String.format("$%.2f", CartManager.getSubtotal())}\n")
        summary.append("Tax: ${String.format("$%.2f", CartManager.getTax())}\n")
        summary.append("TOTAL: ${String.format("$%.2f", CartManager.getTotal())}\n")
        
        return summary.toString()
    }
    
    // Override back button
    override fun onBackPressed() {
        super.onBackPressed()
        navigateBackToCart()
    }
}
```

